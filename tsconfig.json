{
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "test/**/*"
  ],
  "compilerOptions": {
    "outDir": "dist/",
    "baseUrl": "./src",
    "paths": {
      "#core/*": ["core/*"],
      "#utils/*": ["utils/*"],
      "#tools/*": ["utils/tools/*"],
      "#controller/*": ["controller/*"]
    },
    "module": "commonjs",
    "target": "ES2019"
  }
}